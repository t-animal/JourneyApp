<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/de.t_animal.journeyapp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    <ToggleButton android:id="@+id/game_startJourneyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="@string/game_startJourneyButton_on"
        android:textOff="@string/game_startJourneyButton_off" />
    
    <ToggleButton android:id="@+id/game_gotCaughtButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_startJourneyButton"
        android:textOn="@string/game_gotCaughtButton_on"
        android:textOff="@string/game_gotCaughtButton_off" />

    <ListView android:id="@+id/game_checkpointsList" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30sp"
    android:layout_below="@id/game_gotCaughtButton"/>

</RelativeLayout>