<resources>

    <!-- API independent styles go here, API dependent in styles_chaser and styles_runner -->
    <style name="ThemeBase" parent="@style/Theme.AppCompat" />

    <style name="ThemeBase.Runner">
        <item name="themeColor">@color/runner</item>
        <item name="switchStyle">@style/Switch.Runner</item>
    </style>

    <style name="ThemeBase.Chaser">
        <item name="themeColor">@color/chaser</item>
        <item name="switchStyle">@style/Switch.Chaser</item>
    </style>

    <!-- Some role  styles -->

    <style name="Table">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="Cell">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Cell.Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/themeColor</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_margin">6dip</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>